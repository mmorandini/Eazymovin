<h2 class="no-margin-top"><%= property.address %></h2>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <% if (!property.imageUrl) {%>
      <img class="width-full" src="../images/default.png">
    <%}else{%>
        <img class="width-full" src="<%= property.imageUrl %>">
    <%}%>
  </div>
  <div class="col-xs-12 col-md-6 bg-white">
    <% var avg = 0; %>
    <% property.ratings.forEach(rating => { %>
      <% avg += Math.round(((Number(rating.value))/property.ratings.length)*10)/10 %>
    <% }); %>

    <h3>Information</h3>
    <ul class="list-unstyled">
      <li>Price per week: &pound;<%=property.ppw %></li>
      <li>Average rating: <%= avg %><li>
    </ul>

    <fieldset>
      <h3 class="no-margin">Add Rating</h3>
      <div class="rating">
        <form method="POST" action="/properties/<%= property.id %>/ratings">
          <input type="radio" class="rating-input"
          id="rating-input-1-5" name="rate" value="5">
          <label for="rating-input-1-5" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-4" name="rate" value="4">
          <label for="rating-input-1-4" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-3" name="rate" value="3">
          <label for="rating-input-1-3" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-2" name="rate" value="2">
          <label for="rating-input-1-2" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-1" name="rate" value="1">
          <label for="rating-input-1-1" class="rating-star"></label><br>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
    </fieldset>

    <h3>Ratings</h3>
    <% property.ratings.forEach(rating => { %>
      <p><%= rating.value %> by <%= rating.user %></p>
    <% }); %>

    <h3>Description</h3>
    <p><%= property.description %></p>
  </div>
</div>
