<h3>Properties to rent in<span id="postcode"><span></h3>

<div class="container property-container">
  <a href="/properties/view-map" id="view-btn">Show on map</a>
  <ul class="row inner-container" style="padding: 20px 0;">
    <% properties.forEach(property => { %>
      <hr>
      <div class="box">
        <div class="col-sm-5">
          <a href="/properties/<%= property._id %>">
          <% if (!property.imageUrl) {%>
            <img src="../images/default.png" alt="" class="crop-image">
            <%}else{%>
              <img src="<%= property.imageUrl %>" alt="" class="crop-image">
            <%}%>
          </a>
        </div>
        <div class="col-sm-7 info">
          <a href="/properties/<%= property._id %>">
            <p><strong>Price/pw: Â£<%= property.ppw %><strong></p>
          </a>
            <p><%= property.address %></p>
            <a href="/properties/<%= property._id %>">
              <p>
                <% if (property.bedrooms < 1) { %>
                  Studio to rent
                <%} else{%>
                <%= property.bedrooms %> bed property to rent
                <% } %>
              </p>
            </a>
            <p><%= (property.description).substring(0, 350)+'...' %></p>
        </div>
      </div>

    <% }); %>
  </ul>
</div>
