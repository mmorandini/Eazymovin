

<% if (locals.message) { %>
  <p class="white-text"><%= message %></p>
  <% } %>

  <div class="jumbotron clearfix log">
    <h3>Login</h3>
    <form class="form-horizontal" method="POST" action="/login">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon" for="email">Email</div>
          <input type="text" name="email" id="email" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon" for="password">Password</div>
          <input type="password" name="password" id="password" class="form-control">
        </div>
      </div>
      <button class="btn btn-primary btn-lg pull-right">Login</button>
    </form>
  </div>
